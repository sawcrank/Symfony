{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
{{parent()}}
<div class="d-flex justify-content-center">
{% for article in pagination %}
<div class="card" style="width: 18rem;">
  <img src="{{ asset('uploads/photos/'~article.foto) }}" class="card-img-top" width="150px" height="200px">
  <div class="card-body">
    <h5 class="card-title">{{ article.titulo }}</h5>
    <p class="card-text">{{ article.descripcion  }}</p>
    <a href="{{path('VerImagen',{id:article.id})}}" class="btn btn-primary">Ver</a>
  </div>
</div>
{% endfor %}
</div>

<div class="d-flex justify-content-center">
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}
